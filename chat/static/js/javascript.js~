function form_post(){

var datastring=$form.serialize();

$.ajax({
    url:"/ajax_url/",
    type:'POST',
    data: datastring, id_conversation_courante
        success: function(response){
            result=JSON.parse(response){
                if (result.error){
                    alert(result.error_text);               
                }
                else{
                    //traiter les donn√©es
                }
            }
        }
});
}

$("#submit_message").submit(form_post());
